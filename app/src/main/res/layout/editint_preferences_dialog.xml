<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.PrefDialogOverlay">

        <TextView
            android:id="@+id/txtIntPrefInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            />

            <Button
                android:id="@+id/btnEditIntUp"
                android:layout_width="@dimen/prefdialog_button_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txtIntPrefInt"
                android:text="Button" />

            <Button
                android:id="@+id/btnEditIntDown"
                android:layout_width="@dimen/prefdialog_button_width"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtIntPrefInt"
                android:layout_below="@id/btnEditIntUp"
                android:layout_alignParentEnd="true"
                android:text="Button" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>